<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chapter2activity.MainActivity" >
    
     <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100px"
        android:layout_y="200px"
        android:src="@drawable/ic_launcher_web" />
    <Button 
        android:id="@+id/btn_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="500px"
        android:layout_x="100px"
        android:layout_y="50px"
        android:text="Click to display a dialog"        />
    <Button 
        android:id="@+id/btn_exit"
        android:layout_x="100px"
        android:layout_y="150px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Thoát"
        />
    <Button 
        android:id="@+id/change_image_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="500px"
        android:layout_x="100px"
        android:layout_y="800px"
        android:text="Đổi ảnh"        />
    <Button 
        android:id="@+id/activity2_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="500px"
        android:layout_x="100px"
        android:layout_y="900px"
        android:text="Start Activity2"        />

</AbsoluteLayout>
